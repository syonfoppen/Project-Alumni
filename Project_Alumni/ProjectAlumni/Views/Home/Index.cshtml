@model IEnumerable<ProjectAlumni.Models.news>

@{
    ViewBag.Title = "Home Page";
}
<link href="@Url.Content("~/Content/Home.css")" rel="stylesheet" type="text/css" />
<div class="news-button" onclick="news()" style="color:white;text-align:center;">
    <i class="fa fa-list" style="color:white;font-size:43px;margin-top:10px;"></i>
    nieuws
</div>
<header class="pc-header" id="top">
    <h2>Alumni</h2>
    <h1 style="padding:0 10%;">Horeca & Horeca Management</h1>
</header>
<div class="mobile-header" >
    <div class="box1"></div>
    <div class="box2"></div>
</div>

<div class="row information" id="information">
    @{
        int counter = 0;
    }
    @foreach (var item in Model)
    {
        counter++;
        <div class="newsBox">

            <h2>@Html.DisplayFor(modelItem => item.title)</h2>
            <div class="news-container">
                @{
                    if (item.thumbnail != null && item.thumbnail.Length > 0)
                    {
                        var base64 = Convert.ToBase64String(item.thumbnail);
                        var imgSrc = String.Format("data:image;base64,{0}", base64);
                        <div class="image" style="background-image:url('@imgSrc')"></div>
                    }
                }
                <div class="text" id="@counter">
                    @Html.DisplayWithLinksFor(modelItem => item.text)
                </div><!--plaats hier de nieuws of informatie-->
            </div>
            <div onclick="loadMore(@counter)" class="load">Meer weergeven</div>

        </div>

    }
</div>
<footer class="pc-footer">
    <ul class="info">
        <li><h3>Contact</h3></li>
        <li>Wierdensestraat 65,</li>
        <li>Almelo</li>
        <li>Tel: 0546 809 000</li>
        <li>E-mail: info@rocvantwente.nl</li>
    </ul>
</footer>
